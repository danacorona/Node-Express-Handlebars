<div class="container">
  <div class="row">
    <div class="col-md-12">
      
      <h1 class="EDB">Eat-Da-Burger!</h1>
      <img src="/assets/img/burger.png" alt="burger" class="mx-auto"><br/><br/>
    </div>
  </div>
</div>
    
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Eat these Burgers!</h2>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h2>Devoured Burgers!</h2>
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<hr>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Add a Burger</h2>
      <form id="create-form">
      <div class="form-group">
        <label for="bn">Burger Name:</label>
        <input type="text" id="bn" name="burger_name" placeholder="Whatt'l it be?">
      </div>
      <div class="form-group">
        <label for="devoured">Devoured?</label>
        <input type="radio" name="devoured" value="1" id="devoured" checked> I Ate It!
        <input type="radio" name="devoured" value="0" id="notdevoured"> Fresh Burger!
      </div>
      <button type="submit" class="btn btn-light">Add Burger</button>
    </div>
  </div>
</div>
